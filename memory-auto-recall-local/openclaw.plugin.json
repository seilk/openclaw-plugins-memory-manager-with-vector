{
  "id": "memory-auto-recall-local",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "enabled": {
        "type": "boolean",
        "default": true
      },
      "maxResults": {
        "type": "number",
        "minimum": 1,
        "maximum": 10,
        "default": 3
      },
      "minScore": {
        "type": "number",
        "minimum": 0,
        "maximum": 1,
        "default": 0.15
      },
      "minPromptLength": {
        "type": "number",
        "minimum": 1,
        "default": 10
      },
      "maxCharsPerSnippet": {
        "type": "number",
        "minimum": 50,
        "maximum": 2000,
        "default": 600
      },
      "maxTotalChars": {
        "type": "number",
        "minimum": 100,
        "maximum": 5000,
        "default": 2500
      },
      "embeddingModel": {
        "type": "string",
        "default": "text-embedding-3-small",
        "description": "Embedding model to use for vector search (must be supported by the configured provider)"
      },
      "embeddingProvider": {
        "type": "string",
        "default": "letsur",
        "description": "Provider name from openclaw.json models.providers to use for embeddings"
      }
    }
  }
}
